<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="default" template="/WEB-INF/layouts/default.jspx">
		<put-attribute name="header" value="/WEB-INF/views/header.jspx" />
		<put-attribute name="menu" value="/WEB-INF/views/menu.jspx" />
		<put-attribute name="footer" value="/WEB-INF/views/footer.jspx" />
	</definition>

	<definition name="public" template="/WEB-INF/layouts/default.jspx">
		<put-attribute name="header" value="/WEB-INF/views/header.jspx" />
		<put-attribute name="footer" value="/WEB-INF/views/footer.jspx" />
	</definition>

	<definition extends="default" name="*/list">
		<put-attribute name="body" value="/WEB-INF/views/{1}/list.jspx" />
	</definition>
	<definition extends="default" name="*/show">
		<put-attribute name="body" value="/WEB-INF/views/{1}/show.jspx" />
	</definition>
	<definition extends="default" name="*/create">
		<put-attribute name="body" value="/WEB-INF/views/{1}/create.jspx" />
	</definition>
	<definition extends="default" name="*/update">
		<put-attribute name="body" value="/WEB-INF/views/{1}/update.jspx" />
	</definition>

</tiles-definitions>
